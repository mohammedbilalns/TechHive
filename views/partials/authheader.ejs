<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>TechHive</title>
    <link rel="stylesheet" href="/tailwind/output.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">

    <script>
        function toggleMenu() {
            const mobileMenu = document.getElementById('mobile-menu');
            mobileMenu.classList.toggle('hidden');
        }
    </script>
</head>
<body class="min-h-screen flex flex-col">
    <header class="bg-white shadow-md">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex justify-between items-center h-16">
                <!-- Logo -->
                <div class="flex-shrink-0">
                    <div class="text-xl font-bold">TechHive</div>
                </div>

                <!-- Desktop Navigation -->
                <nav class="hidden md:flex space-x-8">
                    <a href="#" class="text-black font-semibold">Home</a>
                    <a href="#" class="text-gray-600 hover:text-gray-900">Contact</a>
                    <a href="#" class="text-gray-600 hover:text-gray-900">About</a>
                    <a href="/logout" type="submit" class="text-gray-600 hover:text-gray-900">Log In</a>
                </nav>

                <!-- Mobile menu button -->
                <div class="md:hidden">
                    <button type="button" 
                            onclick="toggleMenu()"
                            class="inline-flex items-center justify-center p-2 rounded-md text-gray-600 hover:text-gray-900 hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-inset focus:ring-indigo-500"
                    >
                        <svg class="h-6 w-6" 
                             stroke="currentColor" 
                             fill="none" 
                             viewBox="0 0 24 24"
                        >
                            <path stroke-linecap="round" 
                                  stroke-linejoin="round" 
                                  stroke-width="2" 
                                  d="M4 6h16M4 12h16M4 18h16"
                            />
                        </svg>
                    </button>
                </div>
            </div>
        </div>

        <!-- Mobile menu -->
        <div class="hidden md:hidden" id="mobile-menu">
            <div class="px-2 pt-2 pb-3 space-y-1 sm:px-3">
                <a href="#" class="block px-3 py-2 rounded-md text-base font-medium text-black">Home</a>
                <a href="#" class="block px-3 py-2 rounded-md text-base font-medium text-gray-600">Contact</a>
                <a href="#" class="block px-3 py-2 rounded-md text-base font-medium text-gray-600">About</a>
                <a href="#" class="block px-3 py-2 rounded-md text-base font-medium text-gray-600">Log In</a>
            </div>
        </div>
    </header>
