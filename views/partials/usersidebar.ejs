<aside id="sidebar"
      class="bg-gray-100 w-3/4 md:w-72 min-h-screen transform md:transform-none transition-transform duration-300 ease-in-out md:block fixed md:static top-0 left-0 h-full md:h-auto z-40 md:z-0 -translate-x-full md:translate-x-0 hidden">
      <!-- Close button - only visible on mobile -->
      <div class="md:hidden p-4 flex justify-end">
        <button onclick="toggleSidebar()" class="text-gray-600 hover:text-gray-900 p-2 rounded-lg">
          <i class="fas fa-times text-xl"></i>
        </button>
      </div>
      
      <nav class="py-4">
        <div class="px-4 md:px-6">
          <div class="flex items-center space-x-4 mb-6">
            <div
              class="w-10 h-10 rounded-full bg-primary-accent text-white flex items-center justify-center flex-shrink-0">
              <i class="fas fa-user text-lg"></i>
            </div>
            <div class="min-w-0 flex-1">
              <h2 class="text-base font-semibold text-gray-800 truncate">
                <%= user.fullname %>
              </h2>
              <p class="text-xs text-gray-600 truncate">
                <%= user.email %>
              </p>
            </div>
          </div>
          <ul class="mt-4 space-y-2">
          
            <li>
              <a href="/account" class="flex nav-link items-center px-4 py-2 <%= locals.page=="account" ? 'bg-primary-accent text-white hover:bg-primary-accent/90' : 'text-gray-800 hover:bg-gray-200' %> rounded-lg">
                <i class="fas fa-user mr-3"></i>
                <span>Account Details</span>
              </a>
            </li>
            <li>
              <a href="/addresses"
                class="flex items-center px-4 nav-link py-2 <%= locals.page=="addresses" ? 'bg-primary-accent text-white hover:bg-primary-accent/90' : 'text-gray-800 hover:bg-gray-200' %> rounded-lg">
                <i class="fas fa-map-marker-alt mr-3"></i>
                <span>Addresses</span>
              </a>
            </li>
            <li>
              <a href="/orders" class="flex items-center nav-link px-4 py-2 <%= locals.page=="orders" ? 'bg-primary-accent text-white hover:bg-primary-accent/90' : 'text-gray-800 hover:bg-gray-200' %> rounded-lg">
                <i class="fas fa-shopping-bag mr-3"></i>
                <span>Orders</span>
              </a>
            </li>
            <li>
              <a href="/cart" class="flex items-center nav-link px-4 py-2 <%= locals.page=="cart" ? 'bg-primary-accent text-white hover:bg-primary-accent/90' : 'text-gray-800 hover:bg-gray-200' %> rounded-lg">
                <i class="fas fa-shopping-cart mr-3"></i>
                <span>Cart</span>
               
              </a>
            </li>
            <li>
              <a href="/wishlist"
                class="flex items-center nav-link px-4 py-2 <%= locals.page=="wishlist" ? 'bg-primary-accent text-white hover:bg-primary-accent/90' : 'text-gray-800 hover:bg-gray-200' %> rounded-lg">
                <i class="fas fa-heart mr-3"></i>
                <span>Wishlist</span>
              </a> 
            </li>
            <li>
              <a href="/wallet" class="flex items-center px-4 nav-link py-2 <%= locals.page=="wallet" ? 'bg-primary-accent text-white hover:bg-primary-accent/90' : 'text-gray-800 hover:bg-gray-200' %> rounded-lg">
                <i class="fas fa-wallet mr-3"></i>
                <span>Wallet</span>
              </a>
            </li>
            <li>
              <a href="/coupons" class="flex items-center nav-link px-4 py-2 <%= locals.page=="coupons" ? 'bg-primary-accent text-white hover:bg-primary-accent/90' : 'text-gray-800 hover:bg-gray-200' %> rounded-lg">
                <i class="fas fa-ticket-alt mr-3"></i>
                <span>My Coupons</span>
              </a>
            </li>
            <li>
              <a href="/logout" class="flex items-center px-4 py-2 text-gray-800 hover:bg-gray-200 rounded-lg">
                <i class="fas fa-sign-out-alt mr-3"></i>
                <span>Logout</span>
              </a>
            </li>
          </ul>
        </div>
      </nav>
    </aside>

<script>
  function toggleSidebar() {
    const sidebar = document.getElementById('sidebar');
    const isOpen = !sidebar.classList.contains('hidden');
    
    if (!isOpen) {
      // Opening the sidebar
      sidebar.classList.remove('hidden');
      // Trigger animation after adding the element
      setTimeout(() => {
        sidebar.classList.remove('-translate-x-full');
      }, 10);
      
      // Add overlay with fade in
      const overlay = document.createElement('div');
      overlay.id = 'sidebar-overlay';
      overlay.className = 'fixed inset-0 bg-black bg-opacity-0 transition-all duration-300 z-30 md:hidden';
      overlay.onclick = toggleSidebar;
      document.body.appendChild(overlay);
      // Trigger fade in
      setTimeout(() => {
        overlay.classList.add('bg-opacity-50');
      }, 10);
    } else {
      // Closing the sidebar
      sidebar.classList.add('-translate-x-full');
      const overlay = document.getElementById('sidebar-overlay');
      
      // Fade out overlay
      if (overlay) {
        overlay.classList.remove('bg-opacity-50');
        overlay.classList.add('bg-opacity-0');
      }
      
      // Wait for animations to complete before removing elements
      setTimeout(() => {
        sidebar.classList.add('hidden');
        overlay?.remove();
      }, 300);
    }
  }
</script>