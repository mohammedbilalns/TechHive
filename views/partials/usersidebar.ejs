<!-- Mobile Menu Overlay -->
<div id="mobile-menu" class="fixed inset-0 bg-black bg-opacity-50 z-50 hidden transition-opacity duration-300">
  <div class="absolute bottom-16 left-0 right-0 bg-white rounded-t-2xl p-4 transform transition-transform duration-300 translate-y-full">
    <div class="flex justify-between items-center mb-4">
      <h3 class="text-lg font-semibold text-gray-800">More Options</h3>
      <button onclick="toggleMobileMenu()" class="text-gray-600 hover:text-primary-accent transition-colors">
        <i class="fas fa-times text-xl"></i>
      </button>
    </div>
    <div class="space-y-2">
      <a href="/cart" class="flex items-center px-4 py-3 text-gray-800 hover:bg-gray-50 rounded-xl transition-all duration-300">
        <div class="relative mr-3">
          <i class="fas fa-shopping-cart"></i>
          <% if (locals.cartQuantity && locals.cartQuantity > 0) { %>
            <span class="absolute -top-2 -right-2 bg-primary-accent text-white text-xs rounded-full w-4 h-4 flex items-center justify-center">
              <%= locals.cartQuantity %>
            </span>
          <% } %>
        </div>
        <span>Cart</span>
      </a>
      <a href="/wishlist" class="flex items-center px-4 py-3 text-gray-800 hover:bg-gray-50 rounded-xl transition-all duration-300">
        <div class="relative mr-3">
          <i class="fas fa-heart"></i>
          <% if (locals.wishlistQuantity && locals.wishlistQuantity > 0) { %>
            <span class="absolute -top-2 -right-2 bg-primary-accent text-white text-xs rounded-full w-4 h-4 flex items-center justify-center">
              <%= locals.wishlistQuantity %>
            </span>
          <% } %>
        </div>
        <span>Wishlist</span>
      </a>
      <a href="/logout" class="flex items-center px-4 py-3 text-gray-800 hover:bg-gray-50 rounded-xl transition-all duration-300">
        <i class="fas fa-sign-out-alt mr-3"></i>
        <span>Logout</span>
      </a>
    </div>
  </div>
</div>

<script>
  function toggleMobileMenu() {
    const menu = document.getElementById('mobile-menu');
    const menuContent = menu.querySelector('div');
    const isOpen = !menu.classList.contains('hidden');
    
    if (!isOpen) {
      // Opening the menu
      menu.classList.remove('hidden');
      // Trigger animation after adding the element
      setTimeout(() => {
        menuContent.classList.remove('translate-y-full');
      }, 10);
    } else {
      // Closing the menu
      menuContent.classList.add('translate-y-full');
      // Wait for animation to complete before hiding
      setTimeout(() => {
        menu.classList.add('hidden');
      }, 300);
    }
  }
</script>