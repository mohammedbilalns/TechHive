      </form>

   
    <!-- Cropper Modal -->
    <div id="cropperModal" class="fixed inset-0 bg-black bg-opacity-50 hidden items-center justify-center z-50">
      <div class="bg-white rounded-lg p-6 max-w-2xl w-full mx-4">
        <div class="flex justify-between items-center mb-4">
          <h3 class="text-lg font-semibold">Crop Image</h3>
          <button onclick="closeCropper()" class="text-gray-500 hover:text-gray-700">
            <i class="fas fa-times"></i>
          </button>
        </div>
        <div class="relative aspect-square mb-4">
          <img id="cropperImage" src="#" class="max-w-full">
        </div>
        <div class="flex justify-end gap-3">
          <button onclick="closeCropper()" class="px-4 py-2 bg-gray-200 text-gray-800 rounded hover:bg-gray-300">Cancel</button>
          <button class="apply-button px-4 py-2 bg-blue-500 text-white rounded hover:bg-blue-600" onclick="applyCrop()">Apply</button>
        </div>
      </div>
    </div>

    <script>
      document.addEventListener("DOMContentLoaded", () => {
        const addProductForm = document.getElementById("addProductForm");
        let cropper;
        let currentImageInput;
        let currentPreviewId;
        let currentUploadLabelId;

        function handleImageUpload(input, previewId, uploadLabelId, modalId, cropperImageId) {
          if (input.files && input.files[0]) {
            const reader = new FileReader();
            currentImageInput = input;
            currentPreviewId = previewId;
            currentUploadLabelId = uploadLabelId;
            
            reader.onload = function(e) {
              const cropperImg = document.getElementById(cropperImageId);
              cropperImg.src = e.target.result;
              
              // Show the cropper modal
              document.getElementById(modalId).style.display = 'flex';
              
              if (cropper) {
                cropper.destroy();
              }
              
              cropper = new Cropper(cropperImg, {
                aspectRatio: 1,
                viewMode: 1,
                autoCropArea: 1,
                background: false,
                zoomable: true,
                scalable: true
              });
            };
            
            reader.readAsDataURL(input.files[0]);
          }
        }

        function closeCropper() {
          document.getElementById("cropperModal").style.display = 'none';
          if (cropper) {
            cropper.destroy();
            cropper = null;
          }
        }

        function applyCrop() {
          if (cropper) {
            const canvas = cropper.getCroppedCanvas();
            canvas.toBlob((blob) => {
              const file = new File([blob], "croppedImage.png", { type: "image/png" });
              const dataTransfer = new DataTransfer();
              dataTransfer.items.add(file);
              currentImageInput.files = dataTransfer.files;

              // Update preview
              const previewContainer = document.getElementById(currentPreviewId);
              const previewImg = previewContainer.querySelector('img') || document.createElement('img');
              if (!previewContainer.querySelector('img')) {
                previewImg.classList.add('h-20', 'w-20', 'object-cover', 'rounded', 'cursor-pointer', 'hover:opacity-75', 'transition-opacity');
                previewImg.onclick = () => currentImageInput.click();
                previewContainer.appendChild(previewImg);
              }
              previewImg.src = canvas.toDataURL();
              
              // Show preview, hide upload label
              previewContainer.classList.remove('hidden');
              const uploadLabel = document.getElementById(currentUploadLabelId);
              if (uploadLabel) {
                uploadLabel.classList.add('hidden');
              }
              
              closeCropper();
            });
          }
        }

        const alertMessage = document.getElementById("alertMessage");
        const alertText = document.getElementById("alertText");

        addProductForm.addEventListener("submit", (event) => {
          alertMessage.classList.add('hidden');
          let isValid = true;

          const name = addProductForm.name.value.trim();
          const brand = addProductForm.brand.value.trim();
          const variant = addProductForm.variant.value.trim();
          const description = addProductForm.description.value.trim();
          const price = addProductForm.price.value.trim();
          const stock = addProductForm.stock.value.trim();
          const discount = addProductForm.discount.value.trim();

          // Define minimum and maximum lengths
          const nameBrandVariantMinLength = 3;
          const nameBrandVariantMaxLength = 100;
          const descriptionMinLength = 10;
          const descriptionMaxLength = 1000;

          // Validate required fields first
          if (!name) {
            alertText.textContent = "Product name is required.";
            alertMessage.classList.remove('hidden');
            isValid = false;
          } else if (name.length < nameBrandVariantMinLength || name.length > nameBrandVariantMaxLength) {
            alertText.textContent = `Product name must be between ${nameBrandVariantMinLength} and ${nameBrandVariantMaxLength} characters.`;
            alertMessage.classList.remove('hidden');
            isValid = false;
          } else if (!brand) {
            alertText.textContent = "Brand is required.";
            alertMessage.classList.remove('hidden');
            isValid = false;
          } else if (brand.length < nameBrandVariantMinLength || brand.length > nameBrandVariantMaxLength) {
            alertText.textContent = `Brand must be between ${nameBrandVariantMinLength} and ${nameBrandVariantMaxLength} characters.`;
            alertMessage.classList.remove('hidden');
            isValid = false;
          } else if (!variant) {
            alertText.textContent = "Variant is required.";
            alertMessage.classList.remove('hidden');
            isValid = false;
          } else if (variant.length < nameBrandVariantMinLength || variant.length > nameBrandVariantMaxLength) {
            alertText.textContent = `Variant must be between ${nameBrandVariantMinLength} and ${nameBrandVariantMaxLength} characters.`;
            alertMessage.classList.remove('hidden');
            isValid = false;
          } else if (!description) {
            alertText.textContent = "Product description is required.";
            alertMessage.classList.remove('hidden');
            isValid = false;
          } else if (description.length < descriptionMinLength || description.length > descriptionMaxLength) {
            alertText.textContent = `Product description must be between ${descriptionMinLength} and ${descriptionMaxLength} characters.`;
            alertMessage.classList.remove('hidden');
            isValid = false;
          } else if (!price) {
            alertText.textContent = "Price is required.";
            alertMessage.classList.remove('hidden');
            isValid = false;
          } else if (!stock) {
            alertText.textContent = "Stock is required.";
            alertMessage.classList.remove('hidden');
            isValid = false;
          }

          // Validate text fields for allowed characters only if required fields are filled
          if (isValid) {
            const nameRegex = /^[A-Za-z0-9\s]+$/;
            const brandRegex = /^[A-Za-z0-9\s]+$/;
            const variantRegex = /^[A-Za-z0-9\s+]+$/;
            const descriptionRegex = /^[A-Za-z0-9\s.,]+$/;

            if (!nameRegex.test(name)) {
              alertText.textContent = "Product name can only contain letters, numbers, and spaces.";
              alertMessage.classList.remove('hidden');
              isValid = false;
            } else if (!brandRegex.test(brand)) {
              alertText.textContent = "Brand can only contain letters, numbers, and spaces.";
              alertMessage.classList.remove('hidden');
              isValid = false;
            } else if (!variantRegex.test(variant)) {
              alertText.textContent = "Variant can only contain letters, numbers, spaces, and +.";
              alertMessage.classList.remove('hidden');
              isValid = false;
            } else if (!descriptionRegex.test(description)) {
              alertText.textContent = "Description can only contain letters, numbers, spaces, ., and ,.";
              alertMessage.classList.remove('hidden');
              isValid = false;
            }
          }

          // Validate numeric fields
          if (isValid) {
            if (parseFloat(price) < 0) {
              alertText.textContent = "Price cannot be negative.";
              alertMessage.classList.remove('hidden');
              isValid = false;
            } else if (parseInt(stock) < 0) {
              alertText.textContent = "Stock cannot be negative.";
              alertMessage.classList.remove('hidden');
              isValid = false;
            } else if (discount && (parseFloat(discount) < 0 || parseFloat(discount) > 100)) {
              alertText.textContent = "Discount percentage must be between 0 and 100.";
              alertMessage.classList.remove('hidden');
              isValid = false;
            }
          }

          if (!isValid) {
            event.preventDefault();
          }
        });

        window.handleImageUpload = handleImageUpload;
        window.closeCropper = closeCropper;
        window.applyCrop = applyCrop;
      });
    </script>
