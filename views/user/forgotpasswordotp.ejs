<%- include('../partials/header') %>
<main class="py-12 flex justify-center items-center">
  <div class="bg-primary-white rounded-lg shadow-lg flex flex-col lg:flex-row overflow-hidden max-w-4xl w-full">
    <!-- Image Section -->
    <div class="bg-blue-100 p-8 flex justify-center items-center">
      <img alt="Illustration of OTP verification" src="./images/otp.png" class="object-cover max-w-full h-auto"/>
    </div>
    <!-- Form Section -->
    <div class="bg-gray-50 p-6 md:p-12 flex-1">
      <p class="text-2xl font-semibold text-gray-800 mb-2">Password Reset Code</p>
      <p class="text-gray-600 mb-6">Enter the verification code sent to your email</p>
      <div class="flex gap-2 mb-6">
        <input type="text" maxlength="1" class="w-12 h-12 border text-center text-xl rounded-md" />
        <input type="text" maxlength="1" class="w-12 h-12 border text-center text-xl rounded-md" />
        <input type="text" maxlength="1" class="w-12 h-12 border text-center text-xl rounded-md" />
        <input type="text" maxlength="1" class="w-12 h-12 border text-center text-xl rounded-md" />
        <input type="text" maxlength="1" class="w-12 h-12 border text-center text-xl rounded-md" />
        <input type="text" maxlength="1" class="w-12 h-12 border text-center text-xl rounded-md" />
      </div>
      <button type="submit" class="w-full py-2 mb-4 text-white bg-primary-accent rounded-md">Verify Code</button>
      <div class="text-center">
        <span class="text-gray-600">Didn't receive code?</span>
        <button class="text-primary-accent ml-2">Resend</button>
      </div>
    </div>
  </div>
</main>
<%- include('../partials/footer') %>