<%- include("../partials/header") %>

<!-- Mobile Menu Button -->
<div class="md:hidden p-4 bg-gray-100 flex justify-between items-center">
  <h1 class="text-xl font-semibold text-gray-800">Checkout</h1>
  <button onclick="toggleSidebar()" class="text-gray-600 hover:text-gray-900">
    <i class="fas fa-bars text-xl"></i>
  </button>
</div>

<div class="flex flex-col md:flex-row">
  <%- include('../partials/usersidebar') %>
  
  <!-- Main Content -->
  <main class="flex-grow p-4 md:py-12">
    <div class="max-w-6xl mx-auto">
      <div class="bg-white rounded-lg shadow-lg p-6">
        <h1 class="text-2xl font-semibold text-gray-800 mb-6">Checkout</h1>

        <!-- Delivery Address Section -->
        <div class="mb-8">
          <div class="flex justify-between items-center mb-4">
            <h2 class="text-xl font-semibold">Delivery Address</h2>
            <% if (addresses.length < 4) { %>
              <button onclick="openAddAddressModal()" 
                      class="text-primary-accent hover:underline">
                + Add New Address
              </button>
            <% } %>
          </div>

          <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <% addresses.forEach(address => { %>
              <div class="border rounded-lg p-4 relative">
                <input type="radio" name="selectedAddress" value="<%= address._id %>" 
                       class="absolute right-4 top-4">
                <h3 class="font-semibold"><%= address.name %></h3>
                <p class="text-gray-600">
                  <%= address.houseName %>,<%= address.localitystreet %><br>
                  <%= address.city %>, <%= address.state %> <%= address.pincode %><br>
                  Phone: <%= address.phone %>
                </p>
                <div class="mt-2">
                  <button onclick="editAddress('<%= JSON.stringify(address) %>')" 
                          class="text-primary-accent hover:underline mr-2">Edit</button>
                </div>
              </div>
            <% }) %>
          </div>
        </div>

        <!-- Order Summary -->
        <div class="mb-8">
          <h2 class="text-xl font-semibold mb-4">Order Summary</h2>
          <div class="space-y-4">
            <% cart.items.forEach(item => { %>
              <div class="flex items-center border-b pb-4" data-product="<%= item.productId._id %>">
                <img src="<%= item.productId.images[0].path %>" 
                     alt="<%= item.productId.name %>" 
                     class="w-16 h-16 object-cover rounded">
                <div class="ml-4 flex-grow">
                  <h3 class="font-semibold"><%= item.productId.name %></h3>
                  <div class="flex items-center mt-2">
                    <div class="flex items-center border rounded">
                      <button onclick="updateQuantity('<%= item.productId._id %>', 'decrease')"
                              class="decrease-btn px-2 py-1 hover:bg-gray-100">-</button>
                      <span class="quantity-value px-3"><%= item.quantity %></span>
                      <button onclick="updateQuantity('<%= item.productId._id %>', 'increase')"
                              class="increase-btn px-2 py-1 hover:bg-gray-100">+</button>
                    </div>
                    <button onclick="removeItem('<%= item.productId._id %>')"
                            class="ml-4 text-red-600 hover:text-red-800">
                      <i class="fas fa-trash"></i>
                    </button>
                  </div>
                </div>
                <div class="text-right">
                  <p class="font-semibold">₹<%= (item.productId.price * (1 - item.productId.discount/100)).toFixed(2) %></p>
                  <% if (item.productId.discount > 0) { %>
                    <p class="text-sm text-gray-500 line-through">₹<%= item.productId.price.toFixed(2) %></p>
                  <% } %>
                </div>
              </div>
            <% }) %>
          </div>

          <!-- Price Details -->
          <div class="mt-6 border-t pt-4">
            <h3 class="font-semibold mb-2">Price Details</h3>
            <div class="space-y-2">
              <div class="flex justify-between">
                <span>Subtotal</span>
                <span>₹<%= subtotal.toFixed(2) %></span>
              </div>
              <div class="flex justify-between">
                <span>Shipping</span>
                <span>Free</span>
              </div>
              <% if (cart.discount) { %>
                <div class="flex justify-between text-green-600">
                  <span>Discount</span>
                  <span>-₹<%= cart.discount.toFixed(2) %></span>
                </div>
              <% } %>
              <div class="flex justify-between text-green-600">
                <span>Total Savings</span>
                <span>₹<%= totalSavings.toFixed(2) %></span>
              </div>
              <div class="border-t pt-2 mt-2">
                <div class="flex justify-between font-semibold">
                  <span>Total Amount</span>
                  <span>₹<%= total.toFixed(2) %></span>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Payment Method -->
        <div class="mb-8">
          <h2 class="text-xl font-semibold mb-4">Payment Method</h2>
          <div class="space-y-3">
            <div class="border rounded-lg p-4">
              <label class="flex items-center">
                <input type="radio" name="paymentMethod" value="cod" checked 
                       class="form-radio text-primary-accent">
                <span class="ml-2">Cash on Delivery</span>
              </label>
            </div>
            <div class="border rounded-lg p-4 opacity-50">
              <label class="flex items-center">
                <input type="radio" name="paymentMethod" value="upi" disabled 
                       class="form-radio">
                <span class="ml-2">UPI (Coming Soon)</span>
              </label>
            </div>
            <!-- Add other payment methods similarly -->
          </div>
        </div>

        <!-- Place Order Button -->
        <button onclick="placeOrder()" 
                class="w-full bg-primary-accent text-white px-6 py-3 rounded-lg hover:bg-primary-accent/90">
          Place Order
        </button>
      </div>
    </div>
  </main>
</div>

<!-- Add Address Modal -->
<div id="addAddressModal" class="hidden fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center z-50">
  <!-- Modal content -->
</div>

<!-- Edit Address Modal -->
<div id="editAddressModal" class="hidden fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center z-50">
  <!-- Modal content -->
</div>

<script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>

<script type="module">
  import { customConfirm, showAlert, closeCustomAlert } from '/js/util.js';
  window.customConfirm = customConfirm;
  window.showAlert = showAlert;
  window.closeCustomAlert = closeCustomAlert;
</script>

<script>
  // Add your JavaScript functions here
  function placeOrder() {
    const selectedAddress = document.querySelector('input[name="selectedAddress"]:checked');
    const paymentMethod = document.querySelector('input[name="paymentMethod"]:checked');

    if (!selectedAddress) {
      showAlert('Please select a delivery address', 'error');
      return;
    }

    const orderData = {
      addressId: selectedAddress.value,
      paymentMethod: paymentMethod.value
    };

    axios.post('/order/place', orderData)
      .then(response => {
        if (response.data.success) {
          showAlert('Order placed successfully!', 'success');
          setTimeout(() => {
            window.location.href = '/profile/orders';
          }, 2000);
        } else {
          showAlert(response.data.message || 'Failed to place order', 'error');
        }
      })
      .catch(error => {
        console.error('Error:', error);
        showAlert('Error placing order', 'error');
      });
  }

  // Add other functions for handling quantity updates, address management, etc.
</script>

<%- include('../partials/footer') %>