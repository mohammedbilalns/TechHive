<%- include('../../partials/header') %>


  <div class="flex flex-col md:flex-row">
    <%- include('../../partials/usersidebar') %>

      <main class="flex-grow p-4 md:py-12">
        <div class="max-w-6xl mx-auto bg-white rounded-lg shadow-lg p-6">
          <h1 class="text-2xl font-semibold text-gray-800 mb-6">My Orders</h1>

          <% if (orders.length===0) { %>
            <div class="text-center py-8">
              <i class="fas fa-shopping-bag text-gray-400 text-4xl mb-4"></i>
              <p class="text-gray-600">No orders found</p>
              <a href="/allproducts"
                class="inline-block mt-4 bg-primary-accent text-white px-6 py-2 rounded-lg hover:bg-primary-accent/90">
                Start Shopping
              </a>
            </div>
            <% } else { %>
              <div class="space-y-4">
                <% orders.forEach(order=> { %>
                  <div class="border rounded-lg overflow-hidden">
                    <!-- Order Header -->
                    <div class="bg-gray-50 p-4 flex justify-between items-center">
                      <div class="flex-grow">
                        <div class="flex justify-between items-center mb-2">
                          <p class="font-medium">Order #<%= order._id %></p>
                          <p class="font-semibold">â‚¹<%= order.totalAmount %></p>
                        </div>
                        <div class="flex justify-between items-center">
                          <p class="text-sm text-gray-600"><%= new Date(order.orderDate).toLocaleDateString() %></p>
                          <span class="inline-block px-3 py-1 text-sm rounded-full
                            <%= order.status === 'delivered' ? 'bg-green-100 text-green-800' :
                               order.status === 'cancelled' ? 'bg-red-100 text-red-800' :
                               'bg-blue-100 text-blue-800' %>">
                            <%= order.status %>
                          </span>
                        </div>
                      </div>
                    </div>

                    <!-- Compact Order Items Preview -->
                    <div class="p-4">
                      <div class="flex items-center justify-between">
                        <div class="flex items-center">
                          <% if (order.items[0]) { %>
                            <img src="<%= order.items[0].images[0].path %>" alt="<%= order.items[0].name %>"
                              class="w-16 h-16 object-cover rounded">
                            <div class="ml-4">
                              <p class="font-medium"><%= order.items[0].name %></p>
                              <p class="text-sm text-gray-600">
                                <%= order.items.length > 1 ? `+${order.items.length - 1} more items` : '1 item' %>
                              </p>
                            </div>
                          <% } %>
                        </div>
                        <button onclick="toggleOrderDetails('<%= order._id %>')" 
                                class="text-primary-accent hover:underline">
                          View Details
                        </button>
                      </div>
                    </div>

                    <!-- Detailed Information (Hidden by default) -->
                    <div id="details-<%= order._id %>" class="hidden border-t">
                      <!-- Previous detailed content goes here -->
                      <div class="p-4">
                        <!-- Payment and Delivery Info -->
                        <div class="mb-4 grid grid-cols-1 md:grid-cols-3 gap-6">
                          <!-- Payment Information -->
                          <div class="bg-gray-50 p-4 rounded-lg">
                            <h4 class="font-medium text-gray-700 mb-2">Payment Information</h4>
                            <div class="text-sm text-gray-600">
                              <p>Method: <%= order.paymentMethod.toUpperCase() %>
                              </p>
                              <p>Status: <span
                                  class="<%= order.paymentStatus === 'paid' ? 'text-green-600' : 'text-red-600' %>">
                                  <%= order.paymentStatus %>
                                </span></p>
                            </div>
                          </div>
                          <!-- Shipping Address -->
                          <div class="bg-gray-50 p-4 rounded-lg md:col-span-2">
                            <h4 class="font-medium text-gray-700 mb-2">Shipping Address</h4>
                            <div class="text-sm text-gray-600">
                              <p>
                                <%= order.shippingAddress.name %>
                              </p>
                              <p>
                                <%= order.shippingAddress.houseName %>
                              </p>
                              <p>
                                <%= order.shippingAddress.localityStreet %>
                              </p>
                              <p>
                                <%= order.shippingAddress.city %>, <%= order.shippingAddress.state %>
                              </p>
                              <p>PIN: <%= order.shippingAddress.pincode %>
                              </p>
                              <p>Phone: <%= order.shippingAddress.phone %>
                              </p>
                            </div>
                          </div>
                        </div>
                        <!-- ... rest of the detailed content ... -->
                      </div>
                    </div>

                    <!-- Order Actions -->
                    <div class="bg-gray-50 p-4 flex justify-end space-x-4">
                      <% if (order.status !== 'cancelled' && order.status !== 'delivered') { %>
                        <button onclick="cancelOrder('<%= order._id %>')" class="text-red-600 hover:underline">
                          Cancel Order
                        </button>
                      <% } %>
                    </div>
                  </div>
                <% }) %>
              </div>
              <% } %>
        </div>
      </main>
  </div>

  <script type="module">
    import { customConfirm, showAlert, closeCustomAlert } from '/js/util.js';
    window.customConfirm = customConfirm;
    window.showAlert = showAlert;
    window.closeCustomAlert = closeCustomAlert;
  </script>
  <script>

    async function cancelOrder(orderId) {
      try {
        const confirmed = await customConfirm('Are you sure you want to cancel this order?');
        if (!confirmed) return;

        const response = await axios.post(`/profile/orders/${orderId}/cancel`);

        if (response.data.success) {
          showAlert('Order cancelled successfully', 'success');
          setTimeout(() => {
            window.location.reload();
          }, 1500);
        } else {
          showAlert(response.data.message || 'Failed to cancel order', 'error');
        }
      } catch (error) {
        console.error('Error:', error);
        showAlert('Failed to cancel order', 'error');
      }
    }

    function toggleOrderDetails(orderId) {
      const detailsElement = document.getElementById(`details-${orderId}`);
      if (detailsElement) {
        detailsElement.classList.toggle('hidden');
      }
    }
  </script>

  <%- include('../../partials/footer') %>