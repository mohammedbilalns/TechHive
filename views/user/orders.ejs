<%- include('../partials/header') %>

<div class="md:hidden p-4 bg-gray-100 flex justify-between items-center">
  <h1 class="text-xl font-semibold text-gray-800">My Orders</h1>
  <button onclick="toggleSidebar()" class="text-gray-600 hover:text-gray-900">
    <i class="fas fa-bars text-xl"></i>
  </button>
</div>

<div class="flex flex-col md:flex-row">
  <%- include('../partials/usersidebar') %>
  
  <main class="flex-grow p-4 md:py-12">
    <div class="max-w-6xl mx-auto bg-white rounded-lg shadow-lg p-6">
      <h1 class="text-2xl font-semibold text-gray-800 mb-6">My Orders</h1>

      <% if (orders.length === 0) { %>
        <div class="text-center py-8">
          <i class="fas fa-shopping-bag text-gray-400 text-4xl mb-4"></i>
          <p class="text-gray-600">No orders found</p>
          <a href="/allproducts" 
             class="inline-block mt-4 bg-primary-accent text-white px-6 py-2 rounded-lg hover:bg-primary-accent/90">
            Start Shopping
          </a>
        </div>
      <% } else { %>
        <div class="space-y-6">
          <% orders.forEach(order => { %>
            <div class="border rounded-lg overflow-hidden">
              <!-- Order Header -->
              <div class="bg-gray-50 p-4 flex justify-between items-center">
                <div>
                  <p class="text-sm text-gray-600">Order placed</p>
                  <p class="font-medium"><%= new Date(order.orderDate).toLocaleDateString() %></p>
                  <p class="text-sm text-gray-500 mt-1">Order ID: <%= order._id %></p>
                </div>
                <div class="text-right">
                  <p class="text-sm text-gray-600">Total</p>
                  <p class="font-semibold">â‚¹<%= order.totalAmount %></p>
                </div>
              </div>

              <!-- Order Status -->
              <div class="p-4 border-b">
                <span class="inline-block px-3 py-1 text-sm rounded-full
                  <%= order.status === 'delivered' ? 'bg-green-100 text-green-800' :
                     order.status === 'cancelled' ? 'bg-red-100 text-red-800' :
                     'bg-blue-100 text-blue-800' %>">
                  <%= order.status %>
                </span>
              </div>

              <!-- Order Items Preview -->
              <div class="p-4">
                <!-- Payment and Delivery Info -->
                <div class="mb-4 grid grid-cols-1 md:grid-cols-3 gap-6">
                  <!-- Payment Information -->
                  <div class="bg-gray-50 p-4 rounded-lg">
                    <h4 class="font-medium text-gray-700 mb-2">Payment Information</h4>
                    <div class="text-sm text-gray-600">
                      <p>Method: <%= order.paymentMethod.toUpperCase() %></p>
                      <p>Status: <span class="<%= order.paymentStatus === 'paid' ? 'text-green-600' : 'text-red-600' %>">
                        <%= order.paymentStatus %>
                      </span></p>
                    </div>
                  </div>

                  <!-- Shipping Address -->
                  <div class="bg-gray-50 p-4 rounded-lg md:col-span-2">
                    <h4 class="font-medium text-gray-700 mb-2">Shipping Address</h4>
                    <div class="text-sm text-gray-600">
                      <p><%= order.shippingAddress.name %></p>
                      <p><%= order.shippingAddress.houseName %></p>
                      <p><%= order.shippingAddress.localityStreet %></p>
                      <p><%= order.shippingAddress.city %>, <%= order.shippingAddress.state %></p>
                      <p>PIN: <%= order.shippingAddress.pincode %></p>
                      <p>Phone: <%= order.shippingAddress.phone %></p>
                    </div>
                  </div>
                </div>

                <!-- Order Items -->
                <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                  <% order.items.slice(0, 2).forEach(item => { %>
                    <div class="flex items-center p-3 bg-gray-50 rounded-lg">
                      <img src="<%= item.product.images[0].path %>" 
                           alt="<%= item.product.name %>"
                           class="w-20 h-20 object-cover rounded">
                      <div class="ml-4">
                        <h3 class="font-medium"><%= item.product.name %></h3>
                        <p class="text-sm text-gray-600">Qty: <%= item.quantity %></p>
                      </div>
                    </div>
                  <% }) %>
                </div>
                <% if (order.items.length > 2) { %>
                  <p class="text-sm text-gray-600 mt-3">
                    +<%= order.items.length - 2 %> more items
                  </p>
                <% } %>
              </div>

              <!-- Order Actions -->
              <div class="bg-gray-50 p-4 flex justify-end space-x-4">
                <% if (order.status !== 'cancelled' && order.status !== 'delivered') { %>
                  <button onclick="cancelOrder('<%= order._id %>')"
                          class="text-red-600 hover:underline">
                    Cancel Order
                  </button>
                <% } %>
              </div>
            </div>
          <% }) %>
        </div>
      <% } %>
    </div>
  </main>
</div>

<script type="module">
  import { customConfirm, showAlert, closeCustomAlert } from '/js/util.js';
  window.customConfirm = customConfirm;
  window.showAlert = showAlert;
  window.closeCustomAlert = closeCustomAlert;
</script>
<script>
async function cancelOrder(orderId) {
  try {
    const confirmed = await customConfirm('Are you sure you want to cancel this order?');
    if (!confirmed) return;
    
    const response = await axios.post(`/profile/orders/${orderId}/cancel`);
    
    if (response.data.success) {
      showAlert('Order cancelled successfully', 'success');
      setTimeout(() => {
        window.location.reload();
      }, 1500);
    } else {
      showAlert(response.data.message || 'Failed to cancel order', 'error');
    }
  } catch (error) {
    console.error('Error:', error);
    showAlert('Failed to cancel order', 'error');
  }
}
</script>

<%- include('../partials/footer') %>