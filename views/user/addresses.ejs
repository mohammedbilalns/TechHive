<script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
<script>
function toggleAddAddress() {
  const form = document.getElementById('addAddressForm');
  form.classList.toggle('hidden');
}

function toggleSidebar() {
  const sidebar = document.getElementById('sidebar');
  sidebar.classList.toggle('hidden');
  sidebar.classList.toggle('fixed');
  sidebar.classList.toggle('top-0');
  sidebar.classList.toggle('left-0');
  sidebar.classList.toggle('z-50');
  sidebar.classList.toggle('h-full');
}

function validateAddressForm(data) {
    // Check for required fields
    if (!data.name || !data.houseName || !data.localityStreet || !data.city || !data.state || !data.pincode || !data.phone) {
        alert('All fields except Alternate Phone are required');
        return false;
    }

    // Validate pincode (assuming it should be 6 digits)
    if (!/^\d{6}$/.test(data.pincode)) {
        alert('Invalid pincode');
        return false;
    }

    // Validate phone number (assuming it should be 10 digits)
    if (!/^\d{10}$/.test(data.phone)) {
        alert('Invalid phone number');
        return false;
    }

    // Validate alternate phone number if provided (assuming it should be 10 digits)
    if (data.alternatePhone && !/^\d{10}$/.test(data.alternatePhone)) {
        alert('Invalid alternate phone number');
        return false;
    }

    return true;
}

async function submitAddAddress() {
    const form = document.getElementById('addAddressForm');
    const formData = new FormData(form);
    const data = Object.fromEntries(formData.entries());

    if (!validateAddressForm(data)) return;

    try {
        const response = await axios.post('/account/add-address', data);
        alert(response.data.message);
        location.reload(); // Reload to update the address list
    } catch (error) {
        alert('Failed to add address');
    }
}

async function submitEditAddress() {
    const form = document.getElementById('editAddressForm');
    const formData = new FormData(form);
    const data = Object.fromEntries(formData.entries());

    if (!validateAddressForm(data)) return;

    const addressId = form.dataset.addressId;

    try {
        const response = await axios.put(`/account/edit-address/${addressId}`, data);
        alert(response.data.message);
        location.reload(); // Reload to update the address list
    } catch (error) {
        alert('Failed to update address');
    }
}

function editAddress(addressId) {
  // Populate the edit form with existing address data
  const address = addresses.find(addr => addr._id === addressId);
  const form = document.getElementById('editAddressForm');
  form.dataset.addressId = addressId;
  form.querySelector('[name="label"]').value = address.label;
  form.querySelector('[name="fullname"]').value = address.fullname;
  form.querySelector('[name="phone"]').value = address.phone;
  form.querySelector('[name="pincode"]').value = address.pincode;
  form.querySelector('[name="street"]').value = address.street;
  form.querySelector('[name="city"]').value = address.city;
  form.querySelector('[name="state"]').value = address.state;
  form.classList.remove('hidden');
}

function deleteAddress(addressId) {
  if (confirm('Are you sure you want to delete this address?')) {
    axios.delete(`/account/delete-address/${addressId}`)
      .then(response => {
        alert(response.data.message);
        location.reload(); // Reload to update the address list
      })
      .catch(error => {
        alert('Failed to delete address');
      });
  }
}
</script>

